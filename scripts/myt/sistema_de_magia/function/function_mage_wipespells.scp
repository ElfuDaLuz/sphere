[FUNCTION mage_wipeSpells]
DB.QUERY="SELECT spellid FROM spellbooks WHERE player=<dUID>;"
for w 0 <eval <DB.ROW.NUMROWS>>
 if (!<IsEmpty <DB.ROW.<dlocal.w>.spellid>>)
	local.spelldel=<DB.ROW.<dlocal.w>.spellid>
	DB.EXECUTE="DELETE FROM spellbooks WHERE player=<dUID> AND spellid=<dlocal.spelldel>;"
	//serv.log <DB.ROW.<dlocal.w>.spellid> 
 endif
end
return 0
